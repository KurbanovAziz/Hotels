<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main"
    tools:context=".presentation.ui.fragments.authorization.register.RegisterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ff_montserrat_bold"
        android:text="@string/asia_travel"
        android:textSize="22sp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableTopCompat="@drawable/ic_logo" />

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="46dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="26dp"
            android:paddingHorizontal="16dp"
            android:orientation="vertical"
            android:paddingBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/tv_phone_and_email"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="@string/number_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_phone_and_email"
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Пароль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_last"
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Имя"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_name"
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                app:cornerRadius="64dp"
                android:textAllCaps="false"
                android:padding="16dp"
                android:id="@+id/btn_register"
                android:textSize="16sp"
                android:fontFamily="@font/ff_montserrat_bold"
                android:text="Зарегестрироваться"
                android:layout_marginTop="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
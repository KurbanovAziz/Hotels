<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragments.profile.ProfileFragment">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:textColor="@color/dark_green"
        android:text="@string/my_profile"
        android:id="@+id/tv_my_profile"
        android:fontFamily="@font/ff_montserrat_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="vertical"
            android:paddingBottom="58dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="E-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Номер телефона"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Пароль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Имя"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="64dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Номер банковской карты"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="expire date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="Имя на карте"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/ff_montserrat_medium"
                android:text="CVC/CVV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/style_ed"
                android:layout_width="match_parent"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                app:cornerRadius="64dp"
                android:textAllCaps="false"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="@font/ff_montserrat_bold"
                android:text="Сохранить"
                android:layout_marginTop="82dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
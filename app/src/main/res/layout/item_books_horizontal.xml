<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="154dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_style_settings_profile"
    android:padding="8dp"
    android:layout_marginEnd="12dp"
    android:layout_height="270dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="128dp"
        android:layout_height="184dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_book"
            android:scaleType="fitXY"
            android:src="@drawable/ic_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>



    <TextView
        app:layout_constraintStart_toStartOf="@id/cv_book"
        app:layout_constraintTop_toBottomOf="@id/cv_book"
        android:id="@+id/tv_name_book"
        android:fontFamily="@font/ff_roboto_regular"
        android:text="@string/name"
        android:textSize="16sp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/new_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintStart_toStartOf="@id/cv_book"
        app:layout_constraintTop_toBottomOf="@id/tv_name_book"
        android:id="@+id/tv_author_book"
        android:fontFamily="@font/ff_roboto_regular"
        android:text="Тологон Касымбеков"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />




</androidx.constraintlayout.widget.ConstraintLayout>